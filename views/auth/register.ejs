<!DOCTYPE html>
<html ng-app="workLogger">
<head>
	<title>Work Logger Sign Up</title>
		<link href='https://fonts.googleapis.com/css?family=Work+Sans' rel='stylesheet' type='text/css'>
		<link rel="stylesheet" type="text/css" href="/css/style.css">
		<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
</head>

<%include ../partials/header %>

<body ng-controller="tableController as vm">

<section>
	<div class="register-form col-md-6">
	<h1 class="login-lable">Create an account</h1>
		<form id="form" action="/register" method="POST">
			<div class="col-sm-10 username">
        <input type="test" name="username" placeholder="username" required>
      </div>
      <div class="col-sm-10 username">
        <input type="password" name="password" placeholder="password" required>
      </div>
			<div class="col-sm-12 submit-btn">
        <button class="btn btn-primary">Submit</button>
     </div>
    </form>
	</div>
</section>


<%include ../partials/footer %>

	<!-- Load jQuery and Bootstrap -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

	<script src="javascripts/fade.js"></script>
	<script src="/users/javascripts/validate.js"></script>

	<script type="text/javascript">
		$(function(){
		  $('#form').validate();
		})
	</script>



</body>
</html>